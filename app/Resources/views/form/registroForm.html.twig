{%- block form_row -%}
<div class="control-group form-group">
<div class="controls">
{{- form_label(form) -}}
{{- form_errors(form) -}}
{{- form_widget(form) -}}
</div>
</div>
{%- endblock form_row -%}

{%- block form_widget_simple -%}
{%- set type = type|default('text') -%}
<input type="{{ type }}" class="form-control" {{ block('widget_attributes') }} >
{%- endblock form_widget_simple -%}
